<Window x:Class="RandomCoffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomCoffee"
        mc:Ignorable="d"
        Title="Random Coffee" Height="414" Width="690">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="189*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="CoffeeImage" HorizontalAlignment="Left" Height="263" Margin="96,20,0,0" VerticalAlignment="Top" Width="356" Stretch="Fill" StretchDirection="Both" Grid.Column="1"/>
        <Button Content="Make Coffee!!" HorizontalAlignment="Left" Margin="97,297,0,0" VerticalAlignment="Top" Height="62" Width="353" FontSize="24" FontWeight="Bold" Grid.Column="1" Click="Button_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.3"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.942"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
